<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:titleTextColor">@color/text_grey</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="RecyclerCardTheme" parent="Base.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="LightBorderTheme" parent="Base.Theme.AppCompat">
        <item name="android:background">@drawable/card_border</item>
    </style>
</resources>
